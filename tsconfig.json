{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es3",                                /* Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES2015', 'ES2016', 'ES2017', 'ES2018', 'ES2019', 'ES2020', or 'ESNEXT'. */
    "module": "CommonJS",     
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,          /* Specify module resolution strategy: 'node' (Node.js) or 'classic' (TypeScript pre-1.6). */
    "baseUrl": "./",   
    "paths": {
      "@root/*": ["*"]
    }, 
    "typeRoots": [
      "bootstrap",
      "base",
      "tool"
    ],
    "sourceMap": false,
    "strict": true,                                 /* Enable all strict type-checking options. */
    "noImplicitAny": false,                       /* Raise error on expressions and declarations with an implied 'any' type. */
    "removeComments": false,
    "strictNullChecks": false,     
    "noEmitOnError": true,
    "downlevelIteration": true,
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "dist",
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}